{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "Name": {
      "$ref": "#/definitions/Notation"
    },

    "JapanOccupation": {
      "type": "string",
      "description": "The following has moved: https://www.hellowork.go.jp/info/job_dictionary.html to: https://www.hellowork.mhlw.go.jp/info/mhlw_job_dictionary.html",
      "examples": [
        "会社役員"
      ]
    },

    "Commute": {
      "type": "object",
      "properties": {
        "time": {
          "$ref": "#/definitions/Time"
        },
        "timing": {
          "$ref": "#/definitions/Timing"
        },
        "pay": {
          "$ref": "#/definitions/Pay"
        }
      }
    },

    "Timing": {
      "type": "object",
      "properties": {
        "start": {
          "$ref": "#/definitions/TimingPreferences"
        },
        "end": {
          "$ref": "#/definitions/TimingPreferences"
        },
        "days": {
          "$ref": "#/definitions/WeekDays"
        },
        "length": {
          "type": "string",
          "description": "Unit: day?"
        }
      }
    },

    "Pay": {
      "type": "object",
      "properties": {
        "timed": {
          "$ref": "#/definitions/PayConditions",
          "default": false
        },
        "fixed": {
          "$ref": "#/definitions/PayConditions",
          "default": false
        }
      }
    },

    "PayConditions": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "string",
          "enum": ["hour"]
        },
        "minValue": {
          "type": "number",
          "default": 0
        },
        "remote": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "commuteCostSeparate": {
              "type": "boolean",
              "default": false
            },
            "payCommuteTime": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "minDuration": {
          "$ref": "#/definitions/Time"
        },
        "maxWeekDuration": {
          "$ref": "#/definitions/Time"
        }
      }
    },

    "TimingPreferences": {
      "type": "object",
      "properties": {
        "immediate": {
          "type": "boolean",
          "default": false
        },
        "anytime": {
          "type": "boolean",
          "default": false
        }
      }
    },

    "WeekDays": {
      "type": "object",
      "properties": {
        "monday": {
          "type": "boolean",
          "default": false
        },
        "tuesday": {
          "type": "boolean",
          "default": false
        },
        "wednesday": {
          "type": "boolean",
          "default": false
        },
        "thursday": {
          "type": "boolean",
          "default": false
        },
        "friday": {
          "type": "boolean",
          "default": false
        },
        "saturday": {
          "type": "boolean",
          "default": false
        },
        "sunday": {
          "type": "boolean",
          "default": false
        }
      }
    },

    "Status": {
      "type": "object",
      "properties": {
        "createdDate": {
          "type": "string",
          "default": ""
        },
        "modifiedDate": {
          "type": "string",
          "default": ""
        }
      }
    },

    "PersonalInfo": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/Name"
        },
        "sex": {
          "type": "string"
        },
        "birthDate": {
          "$ref": "#/definitions/Time"
        },
        "birthPlace": {
          "$ref": "#/definitions/Location"
        },
        "nativeLanguage": {
          "type": "string"
        },
        "nativeCountry": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "married": {
          "type": "boolean",
          "default": false
        },
        "children": {
          "type": "number",
          "default": 0
        },
        "dependencies": {
          "type": "object",
          "properties": {
            "spouse": {
              "type": "boolean",
              "default": false
            },
            "children": {
              "type": "number",
              "default": 0
            },
            "other": {
              "type": "number",
              "default": 0
            }
          }
        }
      }
    },

    "Time": {
      "type": "object",
      "description": "Static date time. All values are readonly so start from 1. TODO: Unify with date-helper project",
      "properties": {
        "string": {
          "type": "string",
          "description": "Text representation of the time. TODO: Deprecated in favour of standardized formats.",
          "default": "",
          "examples": [
            "1/22/2020, 7:54:24 PM"
          ]
        },
        "localeString": {
          "type": "string",
          "default": "",
          "examples": [
            "1/22/2020, 7:54:24 PM"
          ]
        },
        "utcString": {
          "type": "string",
          "default": "",
          "examples": [
            "Wed, 22 Jan 2020 10:54:24 GMT"
          ]
        },
        "isoString": {
          "type": "string",
          "default": "",
          "examples": [
            "2020-01-22T10:54:24.406Z"
          ]
        },
        "year": {
          "type": "number",
          "default": 0,
          "examples": [
            1999
          ]
        },
        "month": {
          "type": "number",
          "default": 0,
          "examples": [
            11
          ]
        },
        "day": {
          "type": "number",
          "default": 0,
          "examples": [
            21
          ]
        },
        "hours": {
          "type": "number",
          "default": 0,
          "examples": [
            19
          ]
        },
        "mins": {
          "type": "number",
          "default": 0,
          "examples": [
            54
          ]
        },
        "seconds": {
          "type": "number",
          "default": 0,
          "examples": [
            21
          ]
        },
        "time": {
          "type": "number",
          "description": "Time in ms similar to JavaScript Number(new Date()).",
          "default": 0,
          "examples": [
            1579690464406
          ]
        }
      }
    },

    "TimeRange": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "#/definitions/Time"
        },
        "to": {
          "$ref": "#/definitions/Time"
        }
      }
    },

    "PersonalName": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "default": "",
          "examples": [
            "John"
          ]
        },
        "familyName": {
          "type": "string",
          "default": "",
          "examples": [
            "Smith"
          ]
        },
        "middleName": {
          "type": "string",
          "default": "",
          "examples": [
            "Bob"
          ]
        },
        "otherNames": {
          "type": "array",
          "items": {
            "type": "string",
            "default": "",
            "examples": [
              "Arthur"
            ]
          }
        }
      }
    },

    "ContactType": {
      "type": "object",
      "description": "Object with string representations of preset contact types. Can use any kind of contact method such as phone number or email address.",
      "properties": {
        "home": {
          "type": "string",
          "default": "",
          "examples": [
            "012-3456-789",
            "example@example.example"
          ]
        },
        "work": {
          "type": "string",
          "default": "",
          "examples": [
            "012-3456-789",
            "example@example.example"
          ]
        },
        "mobile": {
          "type": "string",
          "default": "",
          "examples": [
            "012-3456-789",
            "example@example.example"
          ]
        }
      }
    },

    "ServiceCredentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "default": "",
          "examples": [
            "myusername"
          ]
        }
      }
    },

    "Contact": {
      "type": "object",
      "properties": {
        "physicalAddress": {
          "$ref": "#/definitions/Location"
        },
        "emailAddress": {
          "$ref": "#/definitions/ContactType"
        },
        "phoneNumber": {
          "$ref": "#/definitions/ContactType"
        },
        "skype": {
          "$ref": "#/definitions/ServiceCredentials"
        },
        "line": {
          "$ref": "#/definitions/ServiceCredentials"
        },
        "facebook": {
          "$ref": "#/definitions/ServiceCredentials"
        },
        "twitter": {
          "$ref": "#/definitions/ServiceCredentials"
        }
      }
    },

    "PostalAddress": {
      "type": "object",
      "properties": {
        "context": {
          "$ref": "#/definitions/Address"
        },
        "name": {
          "$ref": "#/definitions/Name"
        }
      }
    },

    "Coordinates": {
      "type": "object",
      "properties": {
        "latitude": {
          "type": "string",
          "default": "",
          "examples": [
            "35.689487"
          ]
        },
        "longitude": {
          "type": "string",
          "default": "",
          "examples": [
            "139.691711"
          ]
        }
      }
    },

    "Location": {
      "type": "object",
      "properties": {
        "coords": {
          "$ref": "#/definitions/Coordinates"
        },
        "address": {
          "$ref": "#/definitions/Address"
        }
      }
    },

    "Address": {
      "description": "Location that can be displayed via text. May differ with language.",
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "description": "String representation of address.",
          "default": "",
          "examples": [
            "123 Apartment, 456 Block, 789 Long Road, Green Town, Green City, Green State, ZIP123 Switzerland"
          ]
        },
        "country": {
          "type": "string",
          "default": "",
          "examples": [
            "Switzerland" 
          ]
        },
        "state": {
          "type": "string",
          "default": "",
          "examples": [
            "Green State"
          ]
        },
        "town": {
          "type": "string",
          "default": "",
          "examples": [
            "Green City"
          ]
        },
        "subTownOne": {
          "type": "string",
          "default": "",
          "examples": [
            "Green Town"
          ]
        },
        "subTownTwo": {
          "type": "string",
          "default": "456 Block",
          "examples": [
            "Sub Town"
          ]
        },
        "detailsOne": {
          "type": "string",
          "default": "",
          "examples": [
            "123 Apartment"
          ]
        },
        "detailsTwo": {
          "type": "string",
          "default": "",
          "examples": [
            "456 Block"
          ]
        },
        "detailsThree": {
          "type": "string",
          "default": "",
          "examples": [
            "789 Long Road"
          ]
        },
        "zipCode": {
          "type": "string",
          "default": "",
          "examples": [
            "ZIP123"
          ]
        }
      }
    },

    "Notation": {
      "oneOf": [{
          "type": "string",
          "default": "",
          "anyOf": [
            {
              "$ref": "iso-language-codes.json#definitions/codes"
            },
            {
              "$ref": "iso-language-names.json#definitions/names"
            },
            {
              "$ref": "language-scripts.json#definitions/scripts"
            }
          ]
        },
        {
          "type": "object",
          "default": {}
        }
      ],
      "@description": [
        "Can hold any data.",
        "Allowed formats",
        "1. ISO language code",
        "https://en.wikipedia.org/wiki/List_of_ISO_639-1_codes",
        "2. ISO language name",
        "3. Script name(Example: katakana)"
      ]
    },

    "Portfolio": {
      "type": "object",
      "properties": {
        "works": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PortfolioWork"
          }
        }
      }
    },

    "PortfolioWork": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "default": "",
          "examples": [
            "Amazing Web Application"
          ]
        },
        "info": {
          "type": "string",
          "default": "",
          "examples": [
            "Built with JS, CSS, HTML."
          ]
        },
        "range": {
          "$ref": "#/definitions/TimeRange"
        },
        "website": {
          "type": "string",
          "default": "",
          "examples": [
            "www.example.com"
          ]
        }
      }
    },

    "Work": {
      "allOf": [{
        "$ref": "#/definitions/CommonHistory"
      }],
      "description": "TODO: https://developers.google.com/search/docs/data-types/job-posting https://schema.org/JobPosting",
      "properties": {
        "contract": {
          "type": "string",
          "default": "",
          "examples": [
            "FULL_TIME"
          ]
        },
        "hours": {
          "type": "string",
          "default": "",
          "examples": [
            "9:00 ~ 18:00"
          ]
        },
        "contractedCompany": {
          "$ref": "#/definitions/Company"
        },
        "employedCompany": {
          "$ref": "#/definitions/Company"
        },
        "stationedCompany": {
          "$ref": "#/definitions/Company"
        }
      }
    },

    "Company": {
      "$ref": "#/definitions/Business",
      "description": "TODO: Related to https://schema.org/Corporation",
      "properties": {
        "type": {
          "type": "string",
          "default": "",
          "examples": [
            "LLC"
          ]
        },
        "shares": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/StockShare"
          }
        }
      }
    },

    "Business": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "",
          "examples": [
            "The Open Web"
          ]
        },
        "url": {
          "type": "string",
          "default": "",
          "examples": [
            "www.example.com"
          ]
        },
        "address": {
          "$ref": "#/definitions/Address"
        },
        "founder": {
          "type": "string",
          "default": "",
          "examples": [
            "John Smith"
          ]
        }
      }
    },

    "StockShare": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "",
          "description": "Description about the stock type and why and how stocks were obtained.",
          "examples": [
            "Stocks received as early investor."
          ]
        },
        "amount": {
          "type": "string",
          "default": "",
          "examples": [
            "10 stocks"
          ]
        }
      }
    },

    "Education": {
      "allOf": [{
        "$ref": "#/definitions/CommonHistory"
      }],
      "properties": {
        "status": {
          "type": "string",
          "default": "",
          "examples": [
            "In college"
          ]
        }
      }
    },

    "Qualifications": {
      "allOf": [{
        "$ref": "#/definitions/CommonHistory"
      }]
    },

    "CommonHistory": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CommonHistoryItem"
          }
        }
      }
    },

    "CommonHistoryItem": {
      "type": "object",
      "properties": {
        "range": {
          "$ref": "#/definitions/TimeRange"
        },
        "title": {
          "type": "string",
          "default": "",
          "examples": [
            "Activity Name"
          ]
        },
        "info": {
          "type": "string",
          "default": "",
          "examples": [
            "Helping people in need."
          ]
        },
        "details": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Arbitrary sub-data of the item.",
            "default": "",
            "examples": [
              "Extra information."
            ]
          }
        },
        "location": {
          "$ref": "#/definitions/Location"
        }
      }
    },

    "Skills": {
      "type": "object",
      "properties": {
        "skills": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Skill"
          }
        }
      }
    },

    "Skill": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "",
          "examples": [
            "JavaScript"
          ]
        },
        "time": {
          "$ref": "#/definitions/Time"
        }
      }
    },

    "Preferences": {
      "type": "object",
      "description": "Job preferences.",
      "properties": {
        "desire": {
          "type": "string",
          "default": "",
          "examples": [
            "Looking to work remotely."
          ]
        },
        "desiredWork": {
          "type": "array",
          "items": {
            "type": "string",
            "examples": [
              "Vue.js developer"
            ]
          }
        },
        "requests": {
          "type": "string",
          "default": "",
          "examples": [
            "Please provide laptop."
          ]
        },
        "contract": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "See Work.contract",
            "examples": [
              "FULL_TIME"
            ]
          }
        },
        "commute": {
          "$ref": "#/definitions/Commute"
        },
        "timing": {
          "$ref": "#/definitions/Timing"
        },
        "pay": {
          "$ref": "#/definitions/Pay"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string",
            "default": "",
            "examples": [
              "C++", "JavaScript"
            ]
          }
        }
      }
    },

    "Hobby": {
      "type": "object",
      "properties": {
        "hobbies": {
          "type": "object",
          "description": "TODO: Add further information."
        }
      }
    },

    "Media": {
      "type": "object",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Image"
          }
        },
        "video": {
          "type": "array",
          "description": "TODO"
        },
        "audio": {
          "type": "array",
          "description": "TODO"
        }
      }
    },

    "Image": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string",
          "default": "",
          "examples": [
            "www.example.com/image.png"
          ]
        },
        "data": {
          "type": "string",
          "description": "The image data. This can be in base64 or other format.",
          "default": "",
          "examples": [
            "data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw=="
          ]
        },
        "format": {
          "type": "string",
          "description": "Differs from mimeType in that a base64 image has the mime type within the data, but the format is base64.",
          "examples": [
            "base64"
          ]
        },
        "mimeType": {
          "type": "string",
          "default": "",
          "examples": [
            "image/gif"
          ]
        },
        "dimensions": {
          "width": {
            "type": "number",
            "default": 0
          },
          "height": {
            "type": "number",
            "default": 0
          }
        }
      }
    },

    "Application": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "string",
          "default": "",
          "examples": [
            "Please provide time off on Fridays."
          ]
        },
        "applicationReason": {
          "type": "string",
          "default": "",
          "examples": [
            "Job is located nearby."
          ]
        },
        "commute": {
          "$ref": "#/definitions/Commute"
        }
      }
    },

    "JobSite": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "",
          "examples": [
            "My Job Site"
          ]
        },
        "description": {
          "type": "string",
          "default": "",
          "examples": [
            "Job site specializing in IT."
          ]
        },
        "image": {
          "$ref": "#/definitions/Image"
        },
        "url": {
          "type": "string",
          "default": "",
          "examples": [
            "www.example.com"
          ]
        }
      }
    },

    "Api": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string",
          "default": "",
          "examples": [
            "John Smith"
          ]
        },
        "version": {
          "type": "string",
          "default": "",
          "examples": [
            "1.0.0"
          ]
        }
      }
    },

    "SoftwareDocumentation": {
      "type": "object",
      "properties": {}
    },

    "Project": {
      "type": "object",
      "properties": {
        "api": {
          "$ref": "#/definitions/Api"
        },
        "mainType": {
          "type": "string",
          "enum": [
            "npm", "composer"
          ],
          "description": "Specifies which config to use as main. Important when clashes occur.",
          "default": ""
        },
        "temp": {
          "type": "string",
          "default": "",
          "examples": [
            "./tmp"
          ]
        },
        "documentation": {
          "$ref": "#/definitions/SoftwareDocumentation"
        },
        "test": {
          "$ref": "#/definitions/ProjectTest"
        },
        "sourcePaths": {
          "type": "array",
          "items": {
            "type": "string",
            "default": ""
          }
        },
        "testPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "default": ""
          }
        },
        "inputPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "default": ""
          }
        },
        "outputPaths": {
          "type": "array",
          "items": {
            "type": "string",
            "default": ""
          }
        }
      }
    },

    "Projects": {
      "type": "object",
      "properties": {
        "hierarchy": {
          "type": "object",
          "properties": {
            "type": {
              "type": "object"
            }
          },
          "ignoreProject": {
            "type": "string",
            "default": "$_"
          }
        },
        "api": {
          "$ref": "#/definitions/Api"
        },
        "default": {
          "type": "object",
          "properties": {}
        },
        "common": {
          "type": "object",
          "properties": {}
        },
        "test": {
          "type": "object",
          "properties": {
            "tests": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ProjectTest"
              }
            }
          }
        },
        "access": {
          "enum": [
            "public", "private", "unsorted"
          ],
          "default": "unsorted"
        }
      }
    },

    "ProjectTest": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["git", "readme"]
          }
        },
        "allowed": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["npm", "composer"]
          }
