{
    "compilerOptions": {
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "strictNullChecks": true,
        "types": ["node"],
        "resolveJsonModule": true
    },
    "include": [
        "schema/**/*.js",
        "schema/**/*.ts",
        "test/**/*.js",
        "test/**/*.ts",
        "build/**/*.js",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}